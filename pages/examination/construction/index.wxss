/* pages/examination/construction/index.wxss */
@import "/plus/wxParse/wxParse.wxss";
page{
  background-color: #fff;
}
.header {
  background-color: #fff;
  width: 100%;
  height: 240rpx;
  padding-left: 20rpx;
  padding-top: 25rpx;
}

.header .contxt {
  display: block;
  float: left;
  width: 150rpx;
}

.header .contxt > image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 150rpx;
}

.header .contxt  .nickname {
  text-align: center;
  color: #7f8c8d;
}

.header .timer {
  float: left;
  width: 290rpx;
  text-align: left;
  padding-left: 62rpx;
  color: #7f8c8d;
  font-size: 35rpx;
  padding-top: 15rpx;
}

.header .timer >image {
  width: 150rpx;
  height: 150rpx;
}

.header >camera {
  float: right;
  width: 210rpx;
  height: 210rpx;
  margin-right: 30rpx;
}

.start-ks {
  padding: 15rpx 15rpx 0 15rpx;
  position: relative;
  background: #fff;
}

.btn-startKs {
  background-color: #3498db;
  color: #fff;
  text-align: center;
}

.ranking {
  position: fixed; /*or前面的是absolute就可以用*/
  top: 100rpx;
  /* margin: 0 auto; */
  right: 20rpx;
}

.ranking .btn-ranking {
  background: rgba(83, 92, 104, 0.9);
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
}

.question {
  background: #fff;
}

.weui-cells__title {
  padding-top: 25rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #000;
}

.button {
  background-color: #3498db;
  color: #fff;
  margin-top: 15rpx;
}
