/* pages/video_play/index.wxss */
page{
  background-color: #ecf0f1;
}
.video{
  width: 100%;
}
.context{
  padding-left: 40rpx;
}
.title{

  font-weight: bold;
}
.user_info{
  margin-top: 15rpx;
  /* padding-left: 40rpx; */
  height: 100rpx;
}
.user_info image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  border-radius: 80rpx;
}
.user_info text{
  line-height: 100rpx;
  padding-left: 30rpx;
  text-align: left;
  font-size: 14px;
  color: #636e72

}
.hr{
  width: 95%;
  border-top: 1px solid #dfe6e9;
  height:1px;
  margin-right: 10rpx;
}
.list_title{
  margin-top: 15rpx;
  height: 40rpx;
  width: 90%;
}
.list_title .icon{
  width: 10rpx;
  background-color: #00cec9;
  float: left;
  height: 90%;
  margin-top: 5rpx;
}
.list_title text{
  font-size: 13px;
  padding-left: 20rpx;
  color: #95a5a6;
  height: 100%;
  line-height: 40rpx;
}

.list_context{
  height: 150rpx;
  width: 95%;
  margin-top: 25rpx;
  padding-left: 15rpx;
  margin-bottom: 15rpx;
}
.list_context .text_context{
  height: 100%;
  width: 70%;
  float: left;
}
.list_context .text_context .c_title{
  width: 100%;
  display: block;
  height: 105rpx;
}
.list_context .text_context .c_context{
  font-size: 12px;
  color: #95a5a6;
}
.list_context image{
  width: 28%;
  height: 100%;
  float: left;
}