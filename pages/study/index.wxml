<view class='header'>
  <view class="contxt">
    <image src="{{myUserInfo.headPortrait}}"></image>
    <view class="nickname">{{myUserInfo.nickname}}</view>
  </view>
  <view class='timer'>
    <view>总题数：{{list.length}}</view>
    <view>已完成：{{index}}</view>
    <view>回答正确：{{answerNums}}</view>
    <view>{{clock}}</view>
  </view>
  <camera device-position="front" flash="off" binderror="error" style=""></camera>

</view>

<view class='start-ks' hidden='{{hidStart}}'>
  <view class='hr'></view>
  <button class='btn-startKs' bindtap="startKs" >开始考试</button>
</view>
<view class='body-context' hidden='{{!hidStart}}' >
  <view class="weui-cells__title" >{{index+1}}、{{indexQuest.questions}}</view>
  <view class="weui-cells weui-cells_after-title">
  
    <radio-group bindchange="radioChange">
      <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
        <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
        <view class="weui-cell__bd">{{item.name}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
          <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
        </view>
      </label>
    </radio-group>

  </view>
</view>
<button class='button' bindtap="next" hidden='{{!hideSubimt}}'>下一题</button>

 <button class='button' bindtap="submitKs" hidden='{{hideSubimt}}'>完成考试</button> 