/* pages/splz/index.wxss */

page {
  background: #ebebeb;
}

.header {
  background-color: #fff;
  width: 100%;
  height: 240rpx;
  padding-left: 20rpx;
  padding-top: 25rpx;
}

.header .contxt {
  display: block;
  float: left;
  width: 150rpx;
}

.header .contxt > image {
  height: 150rpx;
  width: 150rpx;
  border-radius: 150rpx;
}
.header .contxt  .nickname {
  text-align: center;
  color: #7f8c8d;
}
.header .timer{
  float: left;
  width: 290rpx;
  text-align: left;
  padding-left:62rpx;
  color: #7f8c8d;
  font-size: 35rpx;
  padding-top: 15rpx;
}
.header .timer >image{
  width: 150rpx;
  height: 150rpx;
}
.header >camera {
  float: right;
  width: 210rpx;
  height: 210rpx;
  margin-right: 30rpx;
}
.body-context{
  background: #fff;
}
.weui-cells__title{
  padding-top: 25rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #000;
}
.hr{
  border-top: 1px solid #ebebeb;
  padding-top:30%;
}
.start-ks{
  height: 100%;
  padding: 15rpx 15rpx 0 15rpx;
  position: relative;
  background: #fff;
}
.btn-startKs{
  background-color: #3498db;
  color: #fff;
  font-size: 30rpx;
  line-height: 200rpx;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  border-radius: 200rpx;

}
.button-hover{
  background-color: #3498db;
}
.button{
   background-color: #3498db;
   color: #fff;
   margin-top: 15rpx;
}