  color: #fff;
  width: 100%;
}
.item .fotter{
  background: #fff;
  padding-left: 40rpx;
  height: 80rpx;
  width: 100%;

}
.item .fotter image{
  width: 60rpx;
  height: 60rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  border-radius: 60rpx;

  float: left;
}
.item .fotter .nickname{
  text-align: left;
  line-height: 80rpx;
  margin-left: 30rpx;
  font-size: 14px;
