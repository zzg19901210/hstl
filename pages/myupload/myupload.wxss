/* pages/video_list/index.wxss */
@import "../zj/zj.wxss";
page{
    background: #ebebeb;
}
.item{
  height: 100%;
}
.arc_item{
  background: #fff;
  padding-left: 25rpx;
  height: 180rpx;
}
.item-ans {
  width: 93%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  padding-left: 15rpx;
  border-bottom: 1px solid #f2f2f2;
}

.item-video{
  position: relative;
  width: 100%;
  height: 460rpx;
}
/* .item-video image{
  height: 450rpx;
