} */
.item-video .play{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 45%;
  left: 45%;
  opacity: 0.47;
  background-color: #000;
  border-radius: 80rpx;
}
.item-video .play image{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx 15rpx;
}
.item-video .bg{
  height: 100%;
  background-image:url(../../images/bg.png);
  background-repeat: repeat-x;
  
