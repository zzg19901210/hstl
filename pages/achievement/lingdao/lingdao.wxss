/* pages/achievement/index.wxss */
@import '/style/loading.wxss';

page {
  background-color: #ecf0f1;
}

.item {
  background-color: #fff;
}

.list_context {
  border-top: 1px solid #dfe6e9;
  height: 160rpx;
  width: 93%;
  margin-left: 25rpx;
  padding-left: 15rpx;
}

.list_context  .c_title {
  width: 100%;
  display: block;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  word-break: break-all;
}

.list_context .score {
  padding-left: 10rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  height: 50rpx;
  color: #95a5a6;
}

.list_context .score .total {
  float: left;
  width: 48%;
}

.list_context .qurstion {
  padding-left: 10rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  height: 60rpx;
  color: #95a5a6;
}

.list_context .qurstion .total {
  float: left;
  width: 48%;
}

.scoll-h {
  height: 100%;
}
